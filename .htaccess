# --- Fuerza HTTPS en todo el sitio ---
RewriteEngine On

# Si la conexión NO es HTTPS (directo o detrás de proxy)
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP:X-Forwarded-Proto} =http
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

